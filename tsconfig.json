{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "rootDir": "src",
    "noImplicitAny": false
  }
}
